@model IEnumerable<CoverType>

@{
   ViewData["Title"] = "Category";
}

<partial name="_Notification" />

<h1>Index Categories</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                CoverType List
            </h2>
        </div>
        <div class="col-6 text-end">
            <h2 class="text-primary">
                <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp;
                    Create New CoverType
                </a>
            </h2>
        </div>
    </div>

<table class = "table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr width="50%">
                <td>
                    @category.Name
                </td>
                <td>
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i>
                                        Edit
                        </a>
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@category.Id">
                            <i class="bi bi-trash3"></i>
                                        Delete
                        </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
